pipeline {
    agent any
 
    parameters {
        string(defaultValue: 'main', description: 'Branch Name', name: 'BRANCH')
        booleanParam(name: 'USER_STAT_GENERATE', defaultValue: false, description: 'User Stat Generation')
    }
    
    stages {
        stage('Print Message') {
            steps {
                echo 'Deploying....'
                script {   
                    sh '''
                    echo 'Hello, Jenkins!'
                    if [[ "$USER_STAT_GENERATE" == "true" ]]; then
                       echo 'Hello, Jenkins vishwajit !'
                    fi
                    '''
                }
            }
        }
    }
}
